doctype html
html(lang="en")
  include ../components/mixinfiles
  +headerfile("New Password")      
  body     

    // New Password Start
    .auth-main
      .codex-authbox
        .auth-header
          .auth-icon
            i.fa.fa-unlock-alt
          h3 reset your password                 
          p You&apos;ve Successfully Verified Your Account. Enter 
            br
            |  New Passeord Below.
        form(action='#')
          .form-group
            label.form-label(for='password') New Password
            .input-group.group-input
              input.form-control.showhide-password(type='password' id="password" placeholder='Enter Your New Password' required='')
              span.input-group-text.toggle-show.fa.fa-eye
          .form-group
            label.form-label(for='newpassword') confirm password
            .input-group.group-input
              input.form-control.showhide-password(type='password' id="newpassword" placeholder='Re Enter Your Password' required='')
              span.input-group-text.toggle-show.fa.fa-eye
          .form-group.mb-0
            button.btn.btn-primary(type='submit') Update Password
    // New Password End


    +footerfile